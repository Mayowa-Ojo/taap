{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "~hooks/*": ["src/hooks/*"],
      "~utils/*": ["src/utils/*"],
      "~database/*": ["src/database/*"]
    }
  },
  "include": ["./src/**/*", "src/database/types.d.ts"]
}
